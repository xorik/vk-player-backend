{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-consistent-codestyle"
  ],
  "rulesDirectory": [
    "node_modules/tslint-origin-ordered-imports-rule/dist"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "semicolon": [true, "never"],
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "object-destructuring",
      "array-destructuring"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "trailing-comma": {
      "options": {
        "multiline": {
          "arrays": "always",
          "exports": "always",
          "functions": "always",
          "imports": "always",
          "objects": "always",
          "typeLiterals": "never"
        },
        "singleline": "never"
      }
    },

    "early-exit": true,
    "no-accessor-recursion": true,
    "no-collapsible-if": true,
    "no-unnecessary-else": true,
    "no-static-this": true,
    "no-var-before-return": true,
    "prefer-const-enum": true,
    "no-unused": [
      true,
      "ignore-parameters"
    ],
    "origin-ordered-imports": [
      true,
      "no-blank-lines",
      [
        "user",
        "^@/.+"
      ]
    ]
  }
}
